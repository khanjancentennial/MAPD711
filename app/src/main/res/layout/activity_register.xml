<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".Register">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:id="@+id/etRegFullName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Full Name"
            android:layout_below="@id/ivLogo"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/edittext_shape"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/etRegEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edittext_shape"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_below="@id/etRegFullName"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/etRegPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edittext_shape"
            android:hint="Phone Number"
            android:inputType="phone"
            android:layout_below="@id/etRegEmail"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/etRegAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edittext_shape"
            android:hint="Address"
            android:layout_below="@id/etRegPhoneNumber"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/etRegPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:background="@drawable/edittext_shape"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_below="@id/etRegAddress"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Register"
            android:layout_below="@id/etRegPassword"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:textSize="20dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnAlreadyUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a user? Login"
            android:layout_below="@id/btnRegister"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>